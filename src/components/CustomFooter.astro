---
import Default from "@astrojs/starlight/components/Footer.astro";

const isHomepage =
    Astro.locals.starlightRoute.id === "" ||
    Astro.locals.starlightRoute.id === "en";
---

{
    isHomepage ? (
        <footer style="text-align: center">
            @Copyright {new Date().getFullYear()} Gowlive by shichen437
        </footer>
    ) : (
        <Default>
            <slot />
        </Default>
    )
}
